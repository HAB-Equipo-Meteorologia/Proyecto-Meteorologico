{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "streamlit_app.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "chmod +x run.sh; if [ -f environment.yml ]; then conda env update --file environment.yml --name base; fi; echo 'âœ… Conda environment updated'",
  "postAttachCommand": {
    "server": "bash run.sh"
  },
  "portsAttributes": {
    "8501": {
      "label": "Streamlit",
      "onAutoForward": "openPreview"
    },
    "8000": {
      "label": "FastAPI",
      "onAutoForward": "silent"
    }
  },
  "forwardPorts": [8501, 8000]
}
